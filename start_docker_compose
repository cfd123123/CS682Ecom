# First build the containers
docker-compose build

#db.roles.insertMany([
#   { name: "ROLE_CUSTOMER" },
#   { name: "ROLE_EMPLOYEE" },
#   { name: "ROLE_ADMIN" },
#])

# Then spin them up. I removed the -d option so that all output is in the same terminal window
docker-compose up


# Initialize the database:
# mongo <mongo container ID>/springreact --eval 'db.roles.insertMany([{ name: "ROLE_CUSTOMER" },{ name: "ROLE_EMPLOYEE" },{ name: "ROLE_ADMIN" },]);'
#
# OR
#
# $ mongo <mongo container ID>
#   > use springreact
#   > db.roles.insertMany([{ name: "ROLE_CUSTOMER" },{ name: "ROLE_EMPLOYEE" },{ name: "ROLE_ADMIN" },])